@{
    ViewData["Title"] = "Marmosets";
    Layout = "_Layout";
    List<Marmoset> marmosets = ViewBag.Marmosets;
}

<script>
    function deleteWarning(id)
    {
        if(confirm("Are you sure you want to delete this entry?")){
            window.location.href = '@Url.Action("Delete", "Marmoset")/' + id;
        }
    }
</script>
<h1>Marmosets</h1>
<table class="table">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
    </tr>
    @foreach (Marmoset m in marmosets)
    {
        <tr>
            <th scope="row">@m.Id</th>
            <td>@m.Name</td>
            <td>@m.Age</td>
            <td><a class="btn btn-outline-info" asp-action="Details" asp-route-id="@m.Id">Show Details</a></td>
            <td><button type="button" class="btn btn-danger" onclick="deleteWarning('@m.Id')">Delete</button></td>
        </tr>
    }
</table>
<a type="button" asp-action="CreateRandom" class="btn btn-primary">Create a random Marmoset</a>
